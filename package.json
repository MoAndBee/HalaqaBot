{
  "name": "halakabot",
  "version": "1.0.0",
  "description": "Telegram bot using grammY framework to monitor and collect group messages",
  "module": "src/bot.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/bot.ts",
    "start": "bun src/bot.ts",
    "build": "bun build src/bot.ts --outdir ./dist --target bun"
  },
  "dependencies": {
    "grammy": "^1.31.3"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
